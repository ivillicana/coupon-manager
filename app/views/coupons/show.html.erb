<h1>Coupon Show Page</h1>
<table style="width:30%">
  <tr>
    <th>Item</th>
    <td><%= @coupon.item %></td>
  </tr>
  <tr>
    <th>Store</th>
    <td><%= link_to @coupon.store_name, store_path(@coupon.store) %></td>
  </tr>
  <tr>
    <th>Code</th>
    <td><%= @coupon.coupon_code %></td>
  </tr>
  <tr>
    <th>Description</th>
    <td><%= @coupon.offer_description %></td>
  </tr>
  <tr>
    <th>Expires</th>
    <td><%= @coupon.expires_on %></td>
  </tr>
</table>
<div>
<%= form_tag edit_store_coupon_path(@coupon.store, @coupon), method: :get do %>
  <%= submit_tag 'Update Coupon' %>
<% end %><br></br>
<% if current_coupon_folder.include? (@coupon.id) %>
  <%= form_tag delete_coupon_path(@coupon) do %>
    <%= submit_tag 'Delete from Profile' %>
  <% end %>
<% else %>
  <%= form_tag save_coupon_path(@coupon) do %>
    <%= submit_tag 'Save to Profile' %>
  <% end %>
<% end %>

</div>