<div class="text-center"> 
  <h1 class="h1 mb-3">Coupon Show Page</h1>
  <table style="width:30%" class="mb-4 form-signin">
    <tr>
      <th>Item</th>
      <td><%= @coupon.item %></td>
    </tr>
    <tr>
      <th>Store</th>
      <td><%= link_to @coupon.store_name, store_path(@coupon.store) %></td>
    </tr>
    <tr>
      <th>Code</th>
      <td><%= @coupon.coupon_code %></td>
    </tr>
    <tr>
      <th>Description</th>
      <td><%= @coupon.offer_description %></td>
    </tr>
    <tr>
      <th>Expires</th>
      <td><%= @coupon.expires_on %></td>
    </tr>
  </table>

  <%= form_tag edit_store_coupon_path(@coupon.store, @coupon), method: :get, class: "form-signin login-2" do %>
    <%= submit_tag 'Update Coupon', class: "btn btn-md btn-primary btn-block mb-2" %>
  <% end %>

  <%= save_or_delete_from_profile(@coupon)%>
  
</div>