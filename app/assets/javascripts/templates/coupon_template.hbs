<div class="text-center"> 
  <h1 class="h1 mb-3">Coupon</h1>
  <table style="width:70%" class="mb-4 form-signin">
    <tr>
      <th>Item</th>
      <td>{{ item }}</td>
    </tr>
    <tr>
      <th>Store</th>
      <td><a href="/stores/{{ store.id }}" data-storeId="{{ store.id }}" class="store-link">{{ store.name }}</a></td>
    </tr>
    <tr>
      <th>Code</th>
      <td>{{ coupon_code }}</td>
    </tr>
    <tr>
      <th>Description</th>
      <td>{{ offer_description }}</td>
    </tr>
    <tr>
      <th>Expires</th>
      <td>{{ expiration_date }}</td>
    </tr>
  </table>

  <button class="btn btn-md btn-primary btn-block mb-2" id="update-coupon" data-couponid="{{id}}">Update Coupon</button>
  <button class="form-signin login-2 btn btn-sm btn-primary btn-block mb-2" id="next-coupon" data-couponid="{{id}}">Next Coupon</button>
  <!--<%= save_or_delete_from_profile(@coupon)%> -->
  
</div>