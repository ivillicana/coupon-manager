<div class="container text-center mb-5">
    <h2>{{ name }}</h2>
    <p>{{ email }}</p>
    {{#if image }}
      <div class="media">
        <img class="img-thumbnail mx-auto d-block" src="{{ image }}">
      </div>
    {{/if}}
    <!-- <%= form_tag users_path, method: :get, class: "form-signin login-2"  do %>
        <%= submit_tag 'Users with Most Coupons', class: "btn btn-sm btn-secondary btn-block mb-5" %>
    <% end %> -->
</div>

<main role="main">
      <div class="album py-5 bg-light">
        <div class="container" id="saved-coupons"> 
          <h3 class="text-center mb-5">My Saved Coupons</h3>
          <div class="row">

            {{#each coupons}}
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <div class="card-header">
                  <h5 class="h4"><a href="/coupons/{{id}}" class="coupon-link" data-couponId="{{id}}">{{item}}</a></h5>
                </div>
                <div class="card-body">
                  <h5 class="card-title">{{store_name}}</h5>
                  <p class="card-text">{{offer_description}}</p>
                  
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary"><a href="/coupons/{{id}}" class="coupon-link" data-couponId="{{id}}">View</a></button>
                      
                    </div>
                    <small class="text-muted">{{expires_in}}</small>
                  </div>
                </div>
              </div>
            </div>
            {{/each}}

          </div>
        </div>
      </div>

    </main>

  
<footer class="footer">
  <div class="container">
    <span class="text-muted"><small>
      <a data-confirm="Are you sure you want to delete your account?" rel="nofollow" data-method="delete" href="/users/{{ id }}">Delete Acoount</a>
    </small></span>
  </div>
</footer>
  